@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container pt-5">

    <h3> Admin Dashboard</h3>

    <div class="row">
        <div class="col-md-12">
            <h4>Welcome, Admin</h4>
            <p>This is your admin dashboard where you can manage the application.</p>
            @if (TempData["SuccessMessage"] != null)
            {
                <p class="text-success">@TempData["SuccessMessage"]</p>
            }

        </div>
    </div>


    <div class="row">
        <div class="col-md-12">

            <a class="btn btn-primary" asp-controller="admin" asp-action="createProduct"> Create Product </a>

        </div>

    </div>


    <div class="row mt-5">
        <div class="col-md-3">
            <h5>Total Users</h5>
            <p>@ViewBag.TotalUsers</p>
        </div>

        <div class="col-md-3">
            <h5>Total Revenue</h5>
            <p>@ViewBag.TotalRevenue</p>
        </div>

        <div class="col-md-3">
            <h5>Total Products</h5>
            <p>@ViewBag.TotalProducts</p>
        </div>

        <div class="col-md-3">
            <h5>Total Orders</h5>
            <p>@ViewBag.TotalOrders</p>
        </div>


    </div>






    <div style="min-height: 100vh;">



    </div>
